<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Trine.Mobile.Components.Controls;assembly=Trine.Mobile.Components"
             mc:Ignorable="d"
             x:Class="Modules.Customer.Controls.ActivityCardView">

    <Frame HasShadow="True"
           Margin="0,4,0,4"
           Padding="20,20,20,0"
           CornerRadius="5" 
           Visual="Material">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
        </Frame.GestureRecognizers>

        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <StackLayout>
                    <Label Text="{Binding CreationDate, StringFormat='{0:MMMM yyyy}'}"
                           TextColor="{StaticResource AccentColor}"
                           FontSize="20" />
                    <Label Text="{Binding Consultant.FullName}"
                           TextColor="#707070"
                           FontSize="14" />
                    <Label Text="{Binding DaysNb, StringFormat='{0} jours'}"
                           TextColor="#A8A4A4"
                           FontSize="14" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             Spacing="10"
                             HorizontalOptions="EndAndExpand">
                    <Button BackgroundColor="#F1F9FF"
                            Clicked="bt_accept_Clicked"
                            VerticalOptions="Center"
                            Text="&#xe5ca;"
                            Visual="Default"  
                            HorizontalOptions="EndAndExpand"
                            CornerRadius="120"
                            FontFamily="{StaticResource MaterialIcons}"
                            Padding="0"
                            TextColor="{StaticResource AccentColor}"
                            FontSize="20"
                            HeightRequest="47"
                            WidthRequest="47" />
                    <Button BackgroundColor="#FFFFFF"
                            Clicked="bt_refuse_Clicked"
                            FontFamily="{StaticResource MaterialIcons}"
                            HorizontalOptions="EndAndExpand"
                            Text="&#xe14c;"
                            FontSize="20"
                            TextColor="#FF5A39"
                            Padding="0"
                            HeightRequest="47"
                            Visual="Default"
                            BorderColor="#F1F9FF"
                            CornerRadius="120"
                            BorderWidth="1"
                            VerticalOptions="Center" 
                            WidthRequest="47" />
                </StackLayout>
            </StackLayout>

            <Grid x:Name="calendar_placeholder" />
            <!--<controls:ActivityCalendarView CurrentActivity="{Binding}"
                                           CascadeInputTransparent="True" 
                                           x:Name="calendar"
                                           IsEnabled="False"
                                           IsVisible="False"
                                           IsInputEnabled="False"
                                           Margin="0,25,0,0"
                                           CellBackgroundColor="#CCCCCC"
                                           CellForegroundColor="White"
                                           AbsenceCellBackgroundColor="#FF5A39"
                                           CellFontSize="12"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />-->

            <Button Text="Télécharger"
                    Visual="Default"
                    x:Name="bt_download"
                    Clicked="bt_download_Clicked"
                    TextColor="#707070"
                    Opacity="0"
                    IsVisible="False"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="40"
                    Margin="10"
                    FontSize="Small" />
            
            <Label x:Name="lb_expand"
                   Text="&#xe5cf;"
                   TextColor="#707070"
                   HorizontalOptions="Center"
                   FontFamily="{StaticResource MaterialIcons}"
                   FontSize="20" />
        </StackLayout>
    </Frame>
</ContentView>