<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Notifications"
             xmlns:local="clr-namespace:Trine.Mobile.Components.Converters;assembly=Trine.Mobile.Components"
             x:Class="Modules.Settings.Views.NotificationsView">
    <StackLayout VerticalOptions="Center" Margin="40">
        <Label Text="Vos réglages arrivent bientôt !"
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               TextColor="Black"
               Style="{StaticResource H2}"/>
        <Label Text="Revenez plus tard afin de gérer vos préférences de notification."
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               FontFamily="{StaticResource ThinFont}"
               Style="{StaticResource SecondaryText}" TextDecorations="None" />

        <Image x:Name="img" Source="{local:ImageResource Modules.Settings.Assets.notifications.png}" HorizontalOptions="Center" Aspect="AspectFit" Margin="0,40,0,0" />
    </StackLayout>
</ContentPage>